<h1>Edit Category</h1>

<%= form_with model: @category, local: true do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%= form.submit "Update Category", class: 'btn btn-warning' %>
  <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
<% end %>

